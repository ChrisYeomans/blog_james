<!DOCTYPE html>
<html>
  <head>
    <title><%= @title %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true%>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  </head>

  <body>
    <nav class="nav navbar-nav navbar-expand-lg navbar-light bg-success">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse text-center" id="navbarSupportedContent">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/contact_me">Contact Me</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/past_posts">Past Posts</a>
          </li>
        </ul>
        <ul class="navbar-nav ml-auto">
          <% if admin_status %>
            <li class="navbar-item"><a class="nav-link" href="/logout">Logout</a></li>
            <li class="navbar-item"><a class="nav-link" href="/dashboard">Dashboard</a></li>
          <% end %>
        </ul>
      </div>
    </nav>
    <div class="container p-5">
      <% if flash[:notice] %>
        <div class="alert alert-danger text-center">
          <%= flash[:notice] %>
        </div>
      <% end %>
      <% if flash[:succ] %>
        <div class="alert alert-success text-center">
          <%= flash[:succ] %>
        </div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
